<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/goes_background">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/goes_background" />
                    <corners android:radius="10dp" />
                    <gradient
                        android:angle="90"
                        android:endColor="@color/grey_5"
                        android:startColor="@color/grey_3" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey_5" />
                    <corners android:radius="10dp" />
                    <gradient
                        android:angle="90"
                        android:endColor="@color/grey_3"
                        android:startColor="@color/grey_6" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
